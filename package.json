{
  "name": "sluice-orm",
  "version": "0.2.0",
  "description": "A type-safe MongoDB query library where return types are inferred from queries.",
  "author": {
    "name": "DrTtnk"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:docs": "cd docs-site && npm run build",
    "type-check": "tsc --noEmit",
    "build:ci": "./scripts/build.sh",
    "release": "./scripts/release.sh",
    "prepublishOnly": "npm run test:types",
    "test:types": "npm run type-check -- --project tsconfig.test.json && tsd --files 'test/**/*.test-d.ts'",
    "test:runtime": "vitest run --config vitest.config.ts",
    "test": "npm-run-all --continue-on-error format test:types test:runtime",
    "lint": "eslint src test --fix",
    "format": "prettier --write src test ./package.json ./tsd.json",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "test/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mongodb",
    "typescript",
    "typesafe",
    "aggregation",
    "pipeline",
    "query",
    "inference",
    "MQL",
    "ORM",
    "ODM",
    "schema",
    "validation",
    "zod",
    "effect"
  ],
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DrTtnk/sluice-orm.git"
  },
  "homepage": "https://github.com/DrTtnk/sluice-orm#readme",
  "bugs": {
    "url": "https://github.com/DrTtnk/sluice-orm/issues"
  },
  "peerDependencies": {
    "effect": "^3.19.14",
    "json-schema-to-typescript": "^10.1.5",
    "mongodb": "^6.18.0",
    "zod": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "effect": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@effect/schema": "^0.75.5",
    "@testcontainers/mongodb": "^11.11.0",
    "effect": "^3.19.14",
    "eslint": "^9.33.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "tsd": "^0.33.0",
    "tsup": "^8.5.1",
    "type-fest": "^5.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  }
}
